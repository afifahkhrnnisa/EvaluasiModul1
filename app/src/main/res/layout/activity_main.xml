<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_edit_stb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Stambuk"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_edit_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Nama"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_stb" />

    <TextView
        android:id="@+id/txt_NA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nilai Akhir"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_nilai_akhir"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_indx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Indeks"
        app:layout_constraintStart_toStartOf="@+id/txt_NA"
        app:layout_constraintTop_toBottomOf="@+id/txt_NA" />

    <TextView
        android:id="@+id/txt_nilai_akhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="26dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txt_NA"
        app:layout_constraintTop_toBottomOf="@+id/txt_edit_nama" />

    <TextView
        android:id="@+id/txt_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txt_nilai_akhir"
        app:layout_constraintTop_toBottomOf="@+id/txt_nilai_akhir" />

    <Button
        android:id="@+id/btn_input"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:onClick="bukaActivity2"
        android:text="13120220008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_indx" />

</androidx.constraintlayout.widget.ConstraintLayout>